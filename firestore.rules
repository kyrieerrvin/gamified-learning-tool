rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Base rules that apply to all collections
    match /{document=**} {
      // Default deny all access
      allow read, write: if false;
    }
    
    // Game progress collection - single source of truth for all user data
    match /gameProgress/{userId} {
      // Allow users to read and write only their own game progress
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to create their own game progress document
      allow create: if request.auth != null && 
                     request.auth.uid == userId && 
                     request.resource.data.userId == userId;
    }
    
    // Admin access (for future use)
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
                           exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
  }
}
